---
import './src/styles/global.css'
import './src/styles/animations.css'
import '@fontsource-variable/rubik'; // Supports weights 300-900

const {title} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="author" content="TuWeb">
	</head>
	<body>
		<div class="fixed top-0 z-[-2] h-screen w-screen bg-[var(--color-bg)] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(10,0,40,0.3),rgba(255,255,255,0))]"></div>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		color: var(--color-text);
		font-family: 'Rubik Variable', sans-serif;
		scroll-behavior: smooth;
		scroll-margin-top: 80px;
	}
</style>
